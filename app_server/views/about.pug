extends layout.pug

block content
  // Navbar Section with Bounce Animation
  .navbar.navbar-expand-lg.navbar-light.bg-light.shadow-sm.animate__animated.animate__bounceInDown
    .container
      a.navbar-brand(href="/") MedBuddy
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ml-auto
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(href="#", id="navbarDropdown", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Menu
            .dropdown-menu(aria-labelledby="navbarDropdown")
              a.dropdown-item(href="/home") Home
              a.dropdown-item(href="/about") About
              a.dropdown-item(href="/logout") Logout

  // About MedBuddy Section with Zoom Animation
  .container.mt-5.animate__animated.animate__zoomIn
    h2.text-center.text-info MedBuddy - Your Personal Health Companion 💪
    p.text-center.font-italic.text-muted "Revolutionizing Healthcare with AI"
    hr.w-25.mx-auto.bg-info

  // Introduction Section with Flip Animation
  .container.mt-5
    .row.justify-content-center
      .col-md-8.animate__animated.animate__flipInX
        .card.shadow-lg.rounded-lg
          .card-body
            h3.text-center.text-primary.font-weight-bold MedBuddy - Your AI Health Assistant 🤖
            p.text-muted.text-center
              | MedBuddy is your smart health buddy designed to monitor your health, provide suggestions, and boost your mental well-being.

  // Features Section with Slide and Hover Effects
  .container.mt-5
    h3.text-center.text-success.font-weight-bold.animate__animated.animate__pulse Key Features 🔥
    .row
      .col-md-6.animate__animated.animate__slideInLeft
        .card.shadow-lg.rounded-lg
          .card-body.bg-light.hover-zoom
            h4.text-center.text-danger.font-weight-bold AI Health Monitoring 🔍
            p.text-muted.text-center Real-time health tracking with advanced machine learning.

      .col-md-6.animate__animated.animate__slideInRight
        .card.shadow-lg.rounded-lg
          .card-body.bg-light.hover-zoom
            h4.text-center.text-danger.font-weight-bold Mental Health Support 🧠
            p.text-muted.text-center Mood tracking, stress management & personalized wellness tips.

  // How MedBuddy Works with Bounce Animation
  .container.mt-5
    .row
      .col-md-12.animate__animated.animate__bounceInUp
        .card.shadow-lg.rounded-lg.bg-warning.text-white
          .card-body
            h4.text-center.font-weight-bold How It Works 🔥
            p.text-center.font-italic MedBuddy integrates with your routine to provide tailored health insights.

  // Testimonials Section with Zoom and Slide Animation
  .container.mt-5
    h3.text-center.text-info.font-weight-bold.animate__animated.animate__rubberBand Client Testimonials 💬
    .row.justify-content-center
      .col-md-8
        .carousel.slide(id="testimonialCarousel", data-ride="carousel")
          .carousel-inner
            .carousel-item.active.animate__animated.animate__zoomIn
              p.text-center.text-muted "MedBuddy changed my life! Highly recommended!" - Sarah J.
            .carousel-item.animate__animated.animate__zoomIn
              p.text-center.text-muted "I'm healthier and happier now, thanks to MedBuddy!" - John D.
            .carousel-item.animate__animated.animate__zoomIn
              p.text-center.text-muted "A game-changer in healthcare!" - Alice P.

          a.carousel-control-prev(href="#testimonialCarousel", role="button", data-slide="prev")
            span.carousel-control-prev-icon(aria-hidden="true")
          a.carousel-control-next(href="#testimonialCarousel", role="button", data-slide="next")
            span.carousel-control-next-icon(aria-hidden="true")

  // Benefits Section with FadeIn Animation
  .container.mt-5
    h3.text-center.text-primary.font-weight-bold.animate__animated.animate__fadeIn Why Choose MedBuddy? 💪
    .row.justify-content-center
      .col-md-8
        .card.shadow-lg.rounded-lg.bg-light
          .card-body
            ul.text-muted
              li.animate__animated.animate__lightSpeedInRight Personalized AI Health Recommendations 💡
              li.animate__animated.animate__lightSpeedInLeft Real-time Health Monitoring 📊
              li.animate__animated.animate__lightSpeedInRight Mental Health Insights 💆‍♀️
              li.animate__animated.animate__lightSpeedInLeft Mood Tracking and Meditation Suggestions ☁️

  
