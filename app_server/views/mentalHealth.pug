extends layout.pug

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-10
        .card.shadow-lg.rounded-lg
          .card-body.text-center.bg-gradient
            h1.text-primary Mental Health Check-In ðŸ˜Š
            p.text-muted Share your feelings and get personalized insights

            form(method="post", action="/mentalHealth")
              .form-group
                label(for="feelings") How do you feel today?
                textarea.form-control(name="feelings", placeholder="I feel happy and excited...")
              button.btn.btn-primary.mt-3(type="submit") Analyze Emotion

            if sentiment
              .alert.alert-info.mt-3 Your Sentiment Score is: #{sentiment}
              h3 Mental Health Insights ðŸ§ 
              p.text-success Recommendation: #{recommendation}

              if sentiment > 0
                i.text-success.fas.fa-smile-beam(style="font-size: 50px;")
              else if sentiment < 0
                i.text-danger.fas.fa-frown(style="font-size: 50px;")
              else
                i.text-warning.fas.fa-meh(style="font-size: 50px;")
